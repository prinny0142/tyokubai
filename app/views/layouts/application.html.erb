<!DOCTYPE html>
<html>
  <head>
    <title>Tyokubai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>WEB直売所</span>
        </nav>

        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li><%= link_to " Home", "" %></li>
            <li><%= link_to " Users", "" %></li>
            <li><%= link_to " Books", "" %></li>
            <li><%= link_to " logout", "" %></li>

            <% else %>
            <li><%= link_to " Home", "" %></li>
            <li><%= link_to " About", "" %></li>
            <li><%= link_to " sign up", "" %></</li>
            <li><%= link_to " login", "" %></li>
            <% end %>

          </ul>
        </nav>
      </div>
    </header>

    <div class='body'>
      <div class='container'>


        <%= yield %>
      </div>
    </div>
  </body>
</html>
