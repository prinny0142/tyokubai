<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h4>ユーザー詳細</h4>
        
    </div>




    <div class="col-xs-6">
      <h4>投稿一覧</h4>
      <div class="row">

        <% @products.each do |product| %>
          <div class="col-xs-6 mx-auto">
            <div class="row">
              <%= link_to product_path(product.id) do %>
                <%= attachment_image_tag product, :image, fallback: "no_image.jpg", width: "90%", height: "auto", class: "text-center" %>
              <% end %>
            </div>

            <div class="row">
              <%= product.name %>
            </div>

            <div class="row">￥<%= product.price %></div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>